<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1900"
        FontSize="24"
         >
    <Window.Resources>
        <local:SpeciesToColorConverter x:Key="speciesToColor"/>
        <local:SpeciesToStarWarsConverter x:Key="speciesToStarWarsConverter"/>
    </Window.Resources >
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
   
        </Grid.RowDefinitions>


        <Viewbox Grid.Column="1" Stretch="Uniform">
            <ItemsControl  ItemsSource="{Binding WorldView.BoidViewModels}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas MouseDown="Canvas_MouseDown" Background="Transparent" Height="{Binding Path=WorldView.Height.Value}" Width="{Binding Path=WorldView.Width.Value}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="{x:Type ContentPresenter}">
                        <Setter Property="Canvas.Left" Value="{Binding Position.Value.X}" />
                        <Setter Property="Canvas.Top" Value="{Binding Position.Value.Y}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!--<Ellipse Fill="{Binding Species, Converter={StaticResource speciesToColor} }"  Width="25" Height="25" />-->
                        <Image Width="50" Height="50"  Source="{Binding Species, Converter={StaticResource speciesToStarWarsConverter}}"></Image>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </Viewbox>
        


        <StackPanel Margin="10" Grid.Column="0">
            <Label  Foreground="AliceBlue" Content="Hunters"></Label>
            <ItemsControl x:Name="Hunters"  ItemsSource="{Binding bindingsViewModel.RangeViewModel}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="20 2 0 2">
                            <StackPanel Orientation="Horizontal">
                                <Label Foreground="Yellow" FontSize="18" Content="{Binding Name}"></Label>
                                <Label Foreground="Yellow" FontSize="18" Content="{Binding Value.Value}"></Label>
                            </StackPanel>
                            <Slider  Value="{Binding Value.Value}" Minimum="{Binding Minimum}" Maximum="{Binding Maximum}" IsSnapToTickEnabled="True"  Width="300" SmallChange="1"/>
                        </StackPanel>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <StackPanel Margin="10" Grid.Column="2">
            <Label Foreground="AliceBlue"  Content="Preys" HorizontalAlignment="Right"></Label>
            <ItemsControl x:Name="Preys"  ItemsSource="{Binding bindingsViewModel.RangeViewModel}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0 2 20 2">
                            <StackPanel Orientation="Horizontal">
                                <Label Foreground="Yellow" FontSize="18" Content="{Binding Name}"></Label>
                                <Label Foreground="Yellow" FontSize="18" Content="{Binding Value.Value}"></Label>
                            </StackPanel>
                            <Slider  Value="{Binding Value.Value}" Minimum="{Binding Minimum}" Maximum="{Binding Maximum}" IsSnapToTickEnabled="True"  Width="300" SmallChange="1"/>
                        </StackPanel>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>


